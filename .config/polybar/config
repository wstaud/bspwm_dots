[colors]
background = ${xrdb:background:#222}
foreground = ${xrdb:foreground:#222}
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/mainBar]
monitor = ${env:MONITOR:DP-1}
width = 1320 
height = 32
offset-x = 300 
offset-y = 8
radius = 0.0
fixed-center = true

background = ${xrdb:background}
foreground = ${xrdb:foreground:#FF0000}

line-size = 4
line-color = #f00

;border-size = 4
;border-color = ${xrdb:color8:#FF000000}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = SF Pro Display:style=semibold:antialias=true:pixelsize=11;1
font-1 = Material Icons:size=11;2
font-2 = M+ 1mn:style=bold:pixelsize=11;1

modules-left = bspwm
modules-center = mpd
modules-right = date

tray-position = left
tray-padding = 2

wm-restack = bspwm

[bar/monitor2Bar]
monitor = ${env:MONITOR:DVI-I-1}
